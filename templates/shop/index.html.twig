{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}

<section class="articles">

    <div class="bg-light p-3">
        <h1>Les produits</h1>
    </div>

    {% for article in articles %}

        <div class="col-4 mt-4">
                <div class="border border rounded p-2 clearfix">
                    <h2>
                        {{ article.title }}
                        -
                        {{ article.price }}
                        â‚¬
                    </h2>
                    <img class="img-fluid rounded" src="{{ article.image }}" alt="Image de {{ article.title }}">
                    <hr>
                    <a href="{{ path('cart_add', {'id': article.id}) }}" class="btn btn-success float-right">
                        <i class="fas fa-shopping-cart mr-1"></i>
                        Ajouter
                    </a>
                </div>
        </div>
        
    {% endfor %}

</section>

{% endblock %}