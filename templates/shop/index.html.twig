{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}

<section class="articles">

    <div class="bg-light p-3">
        <h1>Les produits</h1>
    </div>

    {% for article in articles %}

        <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
        <div class="card-body">
            <h2>
            {{ article.title }}
            -
            {{ article.price }}
            â‚¬
            </h2>
            <img class="img-fluid rounded" src="{{ article.image }}" alt="Image de {{ article.title }}">
        <hr>
        <a href="{{ path('cart_add', {'id': article.id}) }}" class="btn btn-success float-right">
            <i class="fas fa-shopping-cart mr-1"></i>
            Ajouter
        </a>
        </div>
        
    {% endfor %}

</section>

{% endblock %}